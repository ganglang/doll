.detail-wrap scroll-view{
  margin-bottom: 10px;
  box-shadow: 0px 2px 4px #ccc;
  padding: 6px 0px;
}
.detail-wrap scroll-view .scroll-box{
  font-size: 14px;
  color:rgb(77, 73, 73);
  text-align: center;
  border-right: 2px solid #ccc;
}
.detail-wrap scroll-view .scroll-box.active{
  color: #a56262;
}
.detail-wrap swiper swiper-item{
  box-sizing: border-box;
  padding: 0px 10px;
}
.detail-wrap swiper swiper-item.intro .intro-wrap{
  float: right;
  box-sizing: border-box;
  padding-left: 10px;
}
.detail-wrap swiper swiper-item.intro .intro-wrap text{
  font-size: 12px;
  line-height: 1;
}
.detail-wrap swiper swiper-item.intro .desc-wrap{
  font-size: 12px;
  background: #ccc;
  box-sizing: border-box;
  padding: 4px;
  border-radius: 2px;
  margin-top: 4px;
}