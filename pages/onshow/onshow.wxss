.content-wrap .moviesList-wrap{
  padding-left:16px;
  margin-top: 10px;
}
.content-wrap .moviesList-wrap .moviesItem{
  float: left;
  padding-right: 16px;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
}
.content-wrap .moviesList-wrap .moviesItem text{
  display: block;
  width: 100%;
  height: 40px;
  font-size: 14px;
  line-height: 20px;
  color:#1a1a1a;
  text-align: center;
}